    "version": "0.2.0",
    "configurations": [
        {
            "type": "mix_task",
            "request": "launch",
            "name": "mix phx.server",
            "task": "phx.server",
            "projectDir": "${workspaceRoot}/api",
            "excludeModules": [
                ":bcrypt_nif",
                "Bcrypt.Base"
            ]
        },
        {
            "type": "mix_task",
            "request": "launch",
            "name": "mix test",
            "task": "test",
            "taskArgs": [
                "--trace",
            ],
            "startApps": true,
            "projectDir": "${workspaceRoot}/api",
            "excludeModules": [
                ":bcrypt_nif",
                "Bcrypt.Base"
            ],
            "requireFiles": [
                "test/**/test_helper.exs",
                "test/**/*_test.exs"
            ]
        },
    ]
}